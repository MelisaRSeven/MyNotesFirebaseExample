<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ForgetPasswordActivity"
    android:id="@+id/forgetPass_Rl"
    android:padding="30dp"
    android:background="@drawable/background_alpha">

    <TextView
        android:id="@+id/forgetPass_email_text"
        android:text="@string/email"
        android:textSize="17sp"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        />

    <EditText
        android:id="@+id/forgetPass_email_edit"
        android:textSize="17sp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorBlue"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgetPass_email_text"
        />

    <Button
        android:id="@+id/forgetPass_send_button"
        android:text="@string/send"
        android:textColor="@color/colorBlue"
        android:background="@drawable/rounded_button_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetPass_email_edit"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>